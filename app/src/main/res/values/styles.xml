<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimaryDark1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">40dp</item>

    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/mobile</item>
        <item name="colorPrimary">@color/light</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/colorWindowBackground2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHighlightInverse">@color/colorAccent2</item>
        <item name="actionBarSize">40dp</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark1</item>
        <item name="color">@color/colorPrimaryDarkDark</item>

        <item name="colorPrimarySurface">@color/colorPrimaryDark1</item>

    </style>


    <style name="AppTheme3" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark3</item>
        <item name="colorPrimary">@color/colorPrimaryDark3</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/colorPrimary3_2</item>
        <item name="colorAccent">@color/colorAccent_d</item>
        <item name="android:textColor">@color/textColor2_2</item>
        <item name="android:textColorPrimary">@color/light</item>
        <item name="android:textColorHighlightInverse">@color/colorAccent_d</item>
<!--        <item name="android:textColorPrimaryDisableOnly">@color/colorAccent3</item>-->
        <item name="actionMenuTextColor">@color/colorPrimaryDark11</item>
        <item name="color">@color/colorPrimaryDark11</item>
        <item name="actionBarSize">40dp</item>
        <item name="colorPrimarySurface">@color/colorPrimaryDark1</item>

    </style>


    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/font</item>
        <item name="colorPrimary">@color/colorPrimaryDark1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark1</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark1</item>
        <item name="android:windowBackground">@color/colorPrimaryDark1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:layoutDirection" tools:targetApi="jelly_bean_mr1">rtl</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark1</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/font</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/font</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/font</item>

    </style>


    <style name="ImageZoom" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!--تم آلرت دیالوگ-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layoutDirection" tools:targetApi="jelly_bean_mr1">rtl</item>
        <item name="colorAccent">#D81B60</item>
        <item name="android:textColor">@color/colorAccent2</item>
        <item name="editTextColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/dialolg_background</item>
        <item name="android:textColorPrimary">@color/black</item>

    </style>
    <!--تم آلرت دیالوگ-->
    <!--تم آلرت دیالوگ دارک-->
    <style name="DialogThemeDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/light</item>
        <item name="android:layoutDirection" tools:targetApi="jelly_bean_mr1">rtl</item>
        <item name="colorAccent">#D81B60</item>
        <item name="android:textColor">@color/colorAccent3</item>
        <item name="editTextColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/custom_back_7</item>

    </style>
